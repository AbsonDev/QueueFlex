# ========================================
# Queue Management Platform - Environment Variables
# ========================================
# Copy this file to .env and update with your values

# ========================================
# Database Configuration
# ========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=QueueManagement
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# ========================================
# Redis Configuration
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# API Configuration (.NET Core)
# ========================================
API_PORT=5000
JWT_SECRET_KEY=your-super-secret-key-with-at-least-256-bits-here-change-this-in-production
JWT_ISSUER=QueueManagement
JWT_AUDIENCE=QueueManagement

# ========================================
# Frontend Admin Configuration (React/Vite)
# ========================================
VITE_API_URL=http://localhost:5000/api/v1
VITE_WS_URL=ws://localhost:5000

# ========================================
# Frontend Platform Configuration (Next.js)
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:5000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:5000

# ========================================
# Development Settings
# ========================================
NODE_ENV=development
DOTNET_ENVIRONMENT=Development